@model FlexTemplate.PresentationLayer.WebServices.Home.NewBlog.ViewModel
<!-- start Main Wrapper -->
<div class="main-wrapper scrollspy-container">
    <!-- start hero-header -->
    <div class="hero hero-breadcrumb" style="background-image: url('@Model.BannerPhotoPath');">
        <div class="container">
            <h1>Додати блог</h1>
            <p>Додати блог</p>
        </div>
    </div>
    <div class="container pt-10 pb-30">
        @await Component.InvokeAsync(typeof(FlexTemplate.PresentationLayer.WebServices.Components.Breadcrumbs.Breadcrumbs))
        <div class="row mt-40 mb-30">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="submite-list-wrapper">
                    <form method="post" enctype="multipart/form-data" id="new-blog-form">
                        <div class="submite-list-box">
                            <div class="row ga-20">
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <label>Назва статті:</label>
                                        <input type="text" class="form-control required" name="Name" />
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group bootstrap3-wysihtml5-wrapper">
                                        <label>Текст:</label>
                                        <textarea name="Text" class="bootstrap3-wysihtml5 form-control" placeholder="Введіть текст ..." style="height: 200px;"></textarea>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group">
                                        <label>Теги:</label>
                                        <input type="text" class="form-control" id="autocompleteTagging" value="" name="Tags" placeholder="Теги.." />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="Guid" value="@Model.NewBlogGuid" />
                        <input type="submit" class="btn btn-primary mt-15" value="Відправити" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end Main Wrapper -->