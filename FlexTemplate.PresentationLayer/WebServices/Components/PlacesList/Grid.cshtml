@model FlexTemplate.PresentationLayer.WebServices.Components.PlacesList.ViewModel
<div class="restaurant-grid-wrapper mb-30">
    <div class="GridLex-gap-30">
        <div class="GridLex-grid-noGutter-equalHeight">
            @foreach (var place in Model.Places)
            {
                <div class="GridLex-col-4_sm-6_xs-6_xss-12">
                    <div class="restaurant-grid-item">
                        <a asp-controller="Home" asp-action="Place" asp-route-id="@place.Id">
                            <div class="image">
                                <img src="@place.HeadPhoto" alt="Image" onerror="this.onerror = null; this.src = '../../Resources/Defaults/place.jpg';" />
                            </div>
                        </a>
                        <div class="content">
                            <a asp-controller="Home" asp-action="Place" asp-route-id="@place.Id">
                                <h5>@place.Name</h5>
                            </a>
                            <p class="location">
                                <i class="fa fa-map-marker"></i> @place.Address
                            </p>
                            <div class="rating-wrapper">
                                <div class="rating-item">
                                    <input type="hidden" class="rating" data-filled="oi oi-star" data-empty="oi oi-star" data-fractions="2" data-readonly value="3.5" />
                                </div>
                                <span class="texting"> (@place.ReviewsCount відгуків)</span>
                            </div>
                            <p class="cuisine">
                                Кухня:
                                @foreach (var category in place.Categories)
                                {
                                    <span><a asp-controller="Home" asp-action="Places" asp-route-listtype="@Model.ListType" asp-route-categories="@category.Key">@category.Value</a></span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>