@model FlexTemplate.PresentationLayer.WebServices.Components.PlacesList.ViewModel
<div class="restaurant-list-item-wrapper no-last-bb">
    @foreach (var place in Model.Places)
    {
        <div class="restaurant-list-item clearfix">

            <div class="GridLex-grid-noGutter-equalHeight">

                <div class="GridLex-col-3_sm-3_xss-12">
                    <a asp-controller="Home" asp-action="Place" asp-route-id="@place.Id">
                        <div class="image">
                            <img src="@place.HeadPhoto" alt="Image" onerror="this.onerror = null; this.src = '../../Resources/Defaults/place.jpg';" />
                        </div>
                    </a>
                </div>

                <div class="GridLex-col-9_sm-9_xss-12">

                    <div class="GridLex-grid-noGutter-equalHeight">

                        <div class="GridLex-col-9_sm-12 content-wrapper">

                            <div class="content">
                                <h5><a asp-controller="Home" asp-action="Place" asp-route-id="@place.Id">@place.Name</a></h5>
                                <p class="location"><i class="fa fa-map-marker"></i> @place.Address</p>
                                <p class="short-info">@place.Description</p>
                                <p class="text-primary offer">-30% від меню «а ля карт»! * </p>
                                <p class="cuisine">
                                    Кухня:
                                    @foreach (var category in place.Categories)
                                    {
                                        <span><a asp-controller="Home" asp-action="Places" asp-route-listtype="list" asp-route-categories="@category.Key">@category.Value</a></span>
                                    }
                                </p>
                            </div>

                        </div>

                        <div class="GridLex-col-3_sm-12 meta-wrapper">

                            <div class="meta">
                                <div class="rating-wrapper">
                                    <div class="rating-item">
                                        <input type="hidden" class="rating" data-filled="oi oi-star" data-empty="oi oi-star" data-fractions="2" data-readonly value="@place.Stars" />
                                    </div>
                                    <span class="texting"> (@place.ReviewsCount відгуків)</span>
                                </div>
                                <div class="right-bottom">
                                    <div class="price">Середня ціна: <span>@place.AveragePrice грн</span></div>
                                    <div class="clear"></div>
                                    <a asp-controller="Home" asp-action="Place" asp-route-id="@place.Id" class="btn btn-primary btn-sm btn-block">Деталі</a>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>
    }
</div>