@model FlexTemplate.PresentationLayer.WebServices.Components.BlogsFeed.ViewModel
<div class="col-sm-4 col-md-3 col-xs-12">
    <aside class="sidebar-wrapper for-blog">
        <div class="sidebar-module">
            <div class="sidebar-module-inner">
                <div class="sidebar-mini-search">
                    <div class="input-group">
                        <form asp-action="Blogs">
                            <input type="text" class="form-control" name="input" placeholder="Шукати...">
                            <span class="input-group-btn">
                                <button onclick="this.form.submit();" class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="clear"></div>
        <div class="section-title-02">
            <h4><span>Категорії</span></h4>
        </div>
        <div class="sidebar-module clearfix">
            <ul class="sidebar-category">
                @foreach (var category in Model.Categories)
                {
                    <li>
                        <a href="@Url.Action("Blogs", "Home", new {input = Model.Input, tags = Model.TagsIds, categories = category.WithoutThisIds, currentPage = Model.CurrentPage})">
                            @category.Caption<span>(@category.BlogsCount)</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="section-title-02">
            <h4><span>Теги</span></h4>
        </div>
        <div class="sidebar-module clearfix">
            <div class="tag-cloud clearfix">
                @foreach (var tag in Model.Tags)
                {
                    <a href="@Url.Action("Blogs", "Home", new {input = Model.Input, tags = tag.WithoutThisIds, categories = Model.CategoriesIds, currentPage = Model.CurrentPage})" class="tag-item">
                        @tag.Name
                    </a>
                }
            </div>
        </div>
        <div class="section-title-02">
            <h4><span>Останні повідомлення</span></h4>
        </div>
        <div class="sidebar-module clearfix">
            <ul class="sidebar-post">
                @foreach (var blog in Model.LatestBlogs)
                {
                    <li class="clearfix">
                        <a asp-controller="Home" asp-action="Blog" asp-route-id="@blog.Id">
                            <div class="image">
                                <img src="@blog.HeadPhotoPath" alt="image" onerror="this.onerror = null; this.src = '../../Resources/Defaults/blog.jpg';" />
                            </div>
                            <div class="content">
                                <h6>@blog.Caption</h6>
                                <p class="recent-post-sm-meta">
                                    <i class="fa fa-clock-o mr-5"></i>@blog.CreatedOn
                                </p>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="section-title-02">
            <h4><span>Популярні повідомлення</span></h4>
        </div>
        <div class="sidebar-module clearfix">
            <ul class="sidebar-post">
                @foreach (var blog in Model.Blogs)
                {
                    <li class="clearfix">
                        <a asp-controller="Home" asp-action="Blog" asp-route-id="@blog.Id">
                            <div class="image">
                                <img src="@blog.HeadPhotoPath" alt="image" onerror="this.onerror = null; this.src = '../../Resources/Defaults/blog.jpg';" />
                            </div>
                            <div class="content">
                                <h6>@blog.Caption</h6>
                                <p class="recent-post-sm-meta"><i class="fa fa-comments mr-5"></i>@blog.CommentsCount</p>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
