@model FlexTemplate.PresentationLayer.WebServices.Components.PlaceReview.ViewModel
<li class="clearfix">

    <div class="review-man">

        <div class="image">

            <img src="@Model.UserPhotoPath" onerror="this.onerror = null; this.src = '../../Resources/Defaults/user.jpg';" alt="images" />

        </div>
        <h6>@Model.UserName</h6> 

    </div>

    <div class="review-content">

        <div class="review-arrow">
            <span></span>
        </div>

        <div class="meta-top">

            <div class="progress-radial progress-radial-sm progress-80">
                <div class="overlay">
                    <div class="progress-radial-inner">
                        <div class="caption">

                            <p class="number">@Model.Stars</p>

                        </div>
                    </div>
                </div>
            </div>

            @Model.CreatedOn

        </div>

        <div class="review-entry">
            <p>@Model.Text</p>
        </div>

    </div>

</li>