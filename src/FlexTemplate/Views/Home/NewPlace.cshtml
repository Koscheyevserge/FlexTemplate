@model IEnumerable<FlexTemplate.Entities.Category>
<!-- start Main Wrapper -->
<div class="main-wrapper scrollspy-container">
    <!-- start hero-header -->
    <div class="hero hero-breadcrumb" style="background-image:url('../../images/hero-header/03.jpg');">
        <div class="container">
            <h1>Додати ресторан</h1>
            <p>Додати ресторан</p>
        </div>
    </div>
    <div class="container pt-10 pb-30">
        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li><a asp-action="Index">Головна</a></li>
                <li class="active">Додати ресторан</li>
            </ol>
        </div>
        <div class="row mt-40 mb-30">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <!--<div class="notify-box">
                    <div class="notify-inner">
                        <p> Якщо у вас немає аккаунту ви можете створити новий, ввівши свою електронну адресу/ім'я користувача. Дані аккаунту будуть підтверджені по електронній пошті.</p>
                        <a href="#" class="btn btn-primary btn-sm btn-absolute">Вхід</a>
                    </div>
                </div>-->
                <div class="submite-list-wrapper">
                    <form method="post" asp-controller="Home" asp-action="NewPlace" enctype="multipart/form-data"  id="new-place-form">
                        <!--Main info-->
                        <div class="row">
                            <div class="col-md-8">
                                <div class="section-title-02 mb-20">
                                    <h3><span>Довідкова інформація</span></h3>
                                    <p>Get your projects to a new level. Included is animation on view, Parallax block, counters and charts, high resolution graphics etc.</p>
                                </div>
                            </div>
                        </div>
                        <div class="submite-list-box">
                            <div class="row ga-20">
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <label>Назва ресторану:</label>
                                        <input type="text" class="form-control required" name="Name"/>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group bootstrap3-wysihtml5-wrapper">
                                        <label>Iнформація про ресторан:</label>
                                        <textarea name="Description" class="bootstrap3-wysihtml5 form-control" placeholder="Введіть текст ..." style="height: 200px;"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row gap-20 mt-15">
                                <div class="col-xs-12 col-sm-12 col-md-12">
                                    <label class="block">Категорії</label>
                                </div>
                                @foreach (FlexTemplate.Entities.Category category in Model)
                                {
                                    <div class="col-xs-12 col-sm-4">
                                        <div class="checkbox-block font-icon-checkbox">
                                            <input id="filter_cuisine-@category.Id" type="checkbox" class="checkbox" name="Categories[]" value="@category.Id"/>
                                            <label for="filter_cuisine-@category.Id">@category.Name</label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <h6 class="text-primary text-uppercase mt-15">Адреса &amp; Контакти</h6>
                            <div class="row gap-20">
                                <div class="col-xs-12 col-sm-4">
                                    <div class="form-group">
                                        <label>Місто</label>
                                        <input type="text" class="form-control required" name="city" />
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="form-group">
                                        <label>Вулиця</label>
                                        <input type="text" class="form-control required" name="street" />
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-4">
                                    <div class="form-group">
                                        <label>Адреса</label>
                                        <input type="text" class="form-control required" name="address" />
                                    </div>
                                </div>
                                <div class="col-xss-12 col-xs-6 col-sm-4">
                                    <div class="form-group">
                                        <label>Телефон</label>
                                        <input type="text" class="form-control required" name="phone" />
                                    </div>
                                </div>
                                <div class="col-xss-12 col-xs-6 col-sm-4">
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control required" name="email" />
                                    </div>
                                </div>
                                <div class="col-xss-12 col-xs-6 col-sm-4">
                                    <div class="form-group">
                                        <label>Веб сайт</label>
                                        <input type="text" class="form-control" name="website" />
                                    </div>
                                </div>
                            </div>
                            <h6 class="text-primary text-uppercase mt-15">Карта</h6>
                            <div id="map-simple" class="map-submit mb-40"></div>
                            <input id="lat-hidden" type="hidden" name="Latitude" />
                            <input id="lng-hidden" type="hidden" name="Longitude" />
                            <h6 class="text-primary text-uppercase mt-15">Opening Hours</h6>
                            <div class="opening-hours-wrapper">

                                <div class="opening-hours-box">

                                    <div class="row gap-20">

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Monday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="MondayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="MondayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Tuesday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="TuesdayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="TuesdayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Wednesday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="WednesdayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="WednesdayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Thursday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="ThurstdayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="ThurstdayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Friday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="FridayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="FridayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Saturday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="SaturdayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="SaturdayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-6">

                                            <label class="day-name">Sunday</label>

                                            <div class="row gap-10">

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group from mb-15">
                                                        <span class="input-group-addon">from</span>
                                                        <input class="oh-timepicker form-control" type="text" name="SundayFrom">
                                                    </div>

                                                </div>

                                                <div class="col-xs-6 col-sm-6 col-md-6">

                                                    <div class="input-group to mb-15">
                                                        <span class="input-group-addon">to</span>
                                                        <input class="oh-timepicker form-control" type="text" name="SundayTo">
                                                    </div>

                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        </div>
                        <!--End Main info-->
                        <!--Menus-->
                        <div class="row">

                            <div class="col-md-8">

                                <div class="section-title-02 mb-20">

                                    <h3><span>Menus</span></h3>

                                    <p>Get your projects to a new level. Included is animation on view, Parallax block, counters and charts, high resolution graphics etc.</p>

                                </div>

                            </div>

                        </div>

                        <div class="submite-list-box">

                            <div class="food-menu-form-wrapper">

                                <h6 class="text-primary text-uppercase">Menu Category #1</h6>

                                <div class="form-group form-group-lg">

                                    <input type="text" name="Menus[0].Name" class="form-control" placeholder="Ex: Breakfast" />

                                </div>

                                <div class="food-menu-form-box clearfix">

                                    <div class="icon">
                                        <i class="fa fa-cutlery text-primary"></i>
                                        <span class="number-label">1</span>
                                    </div>

                                    <div class="image-upload">
                                        <div class="dropzone food-menu-image">
                                            <input name="file" type="file">
                                            <input class="file_descriptor" type="hidden" name="Menus[0].Products[0].Guid" value="@Guid.NewGuid()"/>
                                            <div class="dz-default dz-message"><span>Click or Drop<br />Images Here<br /><small class="font-italic text-muted font400 mt-5 block">2MB max file</small></span></div>
                                        </div>
                                    </div>

                                    <div class="food-memu-form">

                                        <div class="row gap-20">

                                            <div class="col-xss-12 col-xs-12 col-sm-9">

                                                <div class="form-group">
                                                    <label>Title</label>
                                                    <input type="text" name="Menus[0].Products[0].Name" class="form-control" />
                                                </div>

                                            </div>

                                            <div class="col-xss-12 col-xs-12 col-sm-3">

                                                <div class="form-group">
                                                    <label>Price</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="Menus[0].Products[0].Price">
                                                        <span class="input-group-addon">$</span>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="col-xss-12 col-xs-12 col-sm-12">

                                                <div class="form-group">
                                                    <label>Short Description</label>
                                                    <input type="text" name="Menus[0].Products[0].Description" class="form-control" />
                                                </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>

                                <div class="clearfix mt-15">
                                    <a id="add-product" menu-position="0"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                                    <a id="remove-product" menu-position="0"><i class="fa fa-minus-circle" aria-hidden="true"></i></a>
                                    <span class="ml-5 font13 line-12 text-muted font-italic">You can add upto 10 menus</span>
                                </div>

                            </div>

                        </div>

                        <div class="text-center">
                            <h6 class="text-primary text-uppercase mb-0"><a id="add-menu" menu-position="0"><i class="fa fa-plus font14"></i> Add more menu category</a></h6>
                            <p>You can add upto 10 menu categories</p>
                        </div>
                        <!--End Menus-->
                        <!--Фотографії-->
                        <div class="row">
                            <div class="col-md-8">
                                <div class="section-title-02 mb-20">
                                    <h3><span>Фотографії</span></h3>
                                    <p>Підніміть свої проекти на якісно новий рівень.</p>
                                </div>
                            </div>
                        </div>
                        <div class="submite-list-box">
                            <div id="new-place" class="dropzone">
                                <input name="files" type="file" multiple>
                                <input class="file_descriptor" type="hidden" name="uid" value="@Guid.NewGuid().ToString()" />
                                <div class="dz-default dz-message"><span>Натисніть або перетяніть сюди зображення</span></div>
                            </div>
                        </div>
                        <!--End Фотографії-->
