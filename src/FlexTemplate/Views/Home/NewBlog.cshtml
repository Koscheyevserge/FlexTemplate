<!-- start Main Wrapper -->
<div class="main-wrapper scrollspy-container">
    <!-- start hero-header -->
    <div class="hero hero-breadcrumb" style="background-image:url('../../images/hero-header/03.jpg');">
        <div class="container">
            <h1>Додати блог</h1>
            <p>Додати блог</p>
        </div>
    </div>
    <div class="container pt-10 pb-30">
        <div class="breadcrumb-wrapper">
            <ol class="breadcrumb">
                <li><a asp-action="Index">Головна</a></li>
                <li class="active">Додати блог</li>
            </ol>
        </div>
        <div class="row mt-40 mb-30">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                <div class="submite-list-wrapper">
                    <form method="post" asp-controller="Home" asp-action="NewBlog" enctype="multipart/form-data" id="new-blog-form">
                        <!--Main info-->
                        <div class="submite-list-box">
                            <div class="row ga-20">
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group form-group-lg">
                                        <label>Назва блогу:</label>
                                        <input id="required" type="text" class="form-control" name="Name" />
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="form-group bootstrap3-wysihtml5-wrapper">
                                        <label>Iнформація про блог(преамбула):</label>
                                        <textarea id="required" name="Description" class="bootstrap3-wysihtml5 form-control" placeholder="Введіть текст ..." style="height: 200px;"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End Main info-->
                        <!--Фотографії-->
                        <div class="row">
                            <div class="col-md-8">
                                <div class="section-title-02 mb-20">
                                    <h3><span>Фотографії</span></h3>
                                    <p>Підніміть свої проекти на якісно новий рівень.</p>
                                </div>
                            </div>
                        </div>
                        <div class="submite-list-box">
                            <div id="new-place" class="dropzone">
                                <input name="files" type="file" multiple>
                                <input class="file_descriptor" type="hidden" name="uid" value="@Guid.NewGuid().ToString()" />
                                <div class="dz-default dz-message"><span>Натисніть або перетяніть сюди зображення</span></div>
                            </div>
                        </div>
                        <!--End Фотографії-->
                        <div class="col-xs-12 col-sm-12">
                            <div class="form-group bootstrap3-wysihtml5-wrapper">
                                <label>Iнформація про фото:</label>
                                <textarea id="required" name="Description" class="bootstrap3-wysihtml5 form-control" placeholder="Введіть текст ..." style="height: 200px;"></textarea>
                            </div>
                        </div>
                        <div class="c-categories container admin">
                                <div class="categories">
                                        <div class="category">
                                            <h3><span>Теги</span></h3>
                                            <div class="aliases">
                                                    <div class="alias">
                                                        <input class="form-control" type="text" value="Тег">
                                                        <button class="btn btn-primary btn-form admin-button-alias-remove">Видалити тег</button>
                                                    </div>
                                                <div class="buttons">
                                                    <button class="btn btn-primary btn-form admin-button-add-alias">Додати тег</button>
                                                    <button class="btn btn-primary btn-form admin-button-category-save">Зберегти</button>
                                                </div>
                                            </div>
                                        </div>
                                </div>
                        </div>
                        <!--Submit-->
                        <input type="submit" class="btn btn-primary mt-15" value="Відправити" />
                        <!--End Submit-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end Main Wrapper -->