@model FlexTemplate.ViewModels.HomeController.ThisPlaceOverviewViewModel
@{
    bool hasSchedule = Model.Place.Schedule != null && !(Model.Place.Schedule.MondayFrom == TimeSpan.Zero && Model.Place.Schedule.MondayTo == TimeSpan.Zero
    && Model.Place.Schedule.TuesdayFrom == TimeSpan.Zero && Model.Place.Schedule.TuesdayTo == TimeSpan.Zero
    && Model.Place.Schedule.WednesdayFrom == TimeSpan.Zero && Model.Place.Schedule.WednesdayTo == TimeSpan.Zero
    && Model.Place.Schedule.ThurstdayFrom == TimeSpan.Zero && Model.Place.Schedule.ThurstdayTo == TimeSpan.Zero
    && Model.Place.Schedule.FridayFrom == TimeSpan.Zero && Model.Place.Schedule.FridayTo == TimeSpan.Zero
    && Model.Place.Schedule.SaturdayFrom == TimeSpan.Zero && Model.Place.Schedule.SaturdayTo == TimeSpan.Zero
    && Model.Place.Schedule.SundayFrom == TimeSpan.Zero && Model.Place.Schedule.SundayTo == TimeSpan.Zero);
}

@if (Model != null)
{
    <div class="detail-content-section clearfix">

    <div class="section-title-02">
        <h3><span>Overview</span></h3>
    </div>

    <p class="font500">@Html.Raw(Model.Place.Description)</p>

    <div class="row">

    <div class="col-xs-12 @(hasSchedule ? "col-sm-6" : "col-sm-12") mb-20">

        <div class="contact-box">

            <h5 class="text-primary">Contact Information</h5>

            <ul class="contact-list">

                <li>

                    <div class="icon">
                        <i class="ti-home"></i>
                    </div>

                    <div class="content mrg-content">
                        <p class="mrg-content-address">@Model.Place.Street.Name @Model.Place.Address,<br/>@Model.Place.Street.City.Name</p>
                    </div>

                </li>
               @if (!string.IsNullOrEmpty(Model.Place.Phone))
               {
                   <li>

                        <div class="icon">
                            <i class="ti-mobile"></i>
                        </div>

                        <div class="content mrg-content">
                            <p class="mrg-content-phone">@Model.Place.Phone <br/> <br/>
                            </p>
                        </div>

                    </li>
                }
                @if(!string.IsNullOrEmpty(Model.Place.Email))
                {
                    <li>

                       <div class="icon">
                           <i class="ti-email"></i>
                       </div>

                       <div class="content mrg-content">
                           <p class="mrg-content-email">@Model.Place.Email<br/> <br/>
                               </p>
                       </div>

                   </li>
               }
               @if (!string.IsNullOrEmpty(Model.Place.Website))
               {
                   <li>

                       <div class="icon">
                           <i class="ti-email"></i>
                       </div>
                       <div class="content mrg-content">
                           <p class="mrg-content-email"><a href="@Model.Place.Website">Офіційний вебсайт</a><br/> <br/>
                           </p>
                       </div>

                   </li>
               }
            </ul>

            <a href="#detail-content-sticky-nav-04" class="btn btn-primary btn-sm anchor-alt">See map &amp; get route</a>
        </div>

    </div>
    @if (hasSchedule)
    {
        <div class="col-xs-12 col-sm-6">

            <div class="open-time-box">

                <h5 class="text-primary">Opening Time</h5>

                <ul class="open-time-list">

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Понеділок
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.MondayFrom == TimeSpan.Zero && Model.Place.Schedule.MondayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                    вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                    @Model.Place.Schedule.MondayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.MondayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Вівторок
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.TuesdayFrom == TimeSpan.Zero && Model.Place.Schedule.TuesdayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.TuesdayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.TuesdayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Середа
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.WednesdayFrom == TimeSpan.Zero && Model.Place.Schedule.WednesdayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.WednesdayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.WednesdayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Четвер
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.ThurstdayFrom == TimeSpan.Zero && Model.Place.Schedule.ThurstdayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.ThurstdayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.ThurstdayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    П’ятниця
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.FridayFrom == TimeSpan.Zero && Model.Place.Schedule.FridayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.FridayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.FridayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li>

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Суббота
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.SaturdayFrom == TimeSpan.Zero && Model.Place.Schedule.SaturdayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.SaturdayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.SaturdayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                    <li class="day-close">

                        <div class="row">

                            <div class="col-xs-6 col-sm-6">
                                <span class="day">
                                    Неділя
                                </span>
                            </div>

                            <div class="col-xs-6 col-sm-6">
                                @if (Model.Place.Schedule.SundayFrom == TimeSpan.Zero && Model.Place.Schedule.SundayTo == TimeSpan.Zero)
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        вихідний
                                    </span>
                                }
                                else
                                {
                                    <span class="time text-uppercase font700 spacing-2">
                                        @Model.Place.Schedule.SundayFrom.ToString("hh\\:mm") - @Model.Place.Schedule.SundayTo.ToString("hh\\:mm")
                                    </span>
                                }
                            </div>

                        </div>

                    </li>

                </ul>

            </div>

        </div>
    }
    </div>
    <h5 class="text-primary">Особливості:</h5>

    <div class="row">

        <div class="col-xss-12 col-xs-6 col-sm-6 col-md-3 mb-15">
            <h6 class="mb-5">Колонка особливостей 1</h6>
            <p>@Html.Raw(string.Join("<br>", Model.Place.PlaceFeatures.Where(pf => pf.Column == 1).OrderBy(pf => pf.Row).Select(pf => "- " + pf.Name)))</p>
        </div>

        <div class="col-xss-12 col-xs-6 col-sm-6 col-md-3 mb-15">
            <h6 class="mb-5">Колонка особливостей 2</h6>
            <p>@Html.Raw(string.Join("<br>", Model.Place.PlaceFeatures.Where(pf => pf.Column == 2).OrderBy(pf => pf.Row).Select(pf => "- " + pf.Name)))</p>
        </div>

        <div class="col-xss-12 col-xs-6 col-sm-6 col-md-3 mb-15">
            <h6 class="mb-5">Колонка особливостей 3</h6>
            <p>@Html.Raw(string.Join("<br>", Model.Place.PlaceFeatures.Where(pf => pf.Column == 3).OrderBy(pf => pf.Row).Select(pf => "- " + pf.Name)))</p>
        </div>

        <div class="col-xss-12 col-xs-6 col-sm-6 col-md-3 mb-15">
            <h6 class="mb-5">Колонка особливостей 4</h6>
            <p>@Html.Raw(string.Join("<br>", Model.Place.PlaceFeatures.Where(pf => pf.Column == 4).OrderBy(pf => pf.Row).Select(pf => "- " + pf.Name)))</p>
        </div>

        <div class="col-xss-12 col-xs-12 col-sm-12 col-md-12 mb-15">
            <h6 class="mb-5">Кухні:</h6>
            <p>- @string.Join(", ", Model.Place.PlaceCategories.Select(pc => pc.Category.Name))</p>
        </div>

    </div>
    </div>
}