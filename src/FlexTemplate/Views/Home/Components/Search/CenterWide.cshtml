﻿@model FlexTemplate.ViewModels.HomeController.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
   
        <div class="hero text-center alt-height search-margin-top" style="background-image: url('@Model.Images.First()'); margin-top:-25px; z-index:100;">
            <div class="container">

                <div class="row">

                    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                        @Html.Raw(Model.Strings["TitleFirstLabelCaption"])
                        @Html.Raw(Model.Strings["SubtitleLabelCaption"])

                        <div class="home-search-form home-search-form-center">

                            <form>

                                <div class="form-group location-form">
                                    <input type="text" class="form-control" placeholder="Where would you like to eat?">
                                </div>

                                <div class="form-group">
                                    <select class="custom-select" id="category-type">
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <select class="custom-select" id="city-type">
                                        @foreach (var city in Model.Cities)
                                        {
                                            <option value="@city.Id">@city.Name</option>
                                        }
                                    </select>
                                </div>

                                @Html.Raw(Model.Strings["FindButtonCaption"])

                            </form>

                            <div class="clear"></div>

                            @Html.Raw(Model.Strings["EndLabelCaption"])

                        </div>

                    </div>

                </div>

            </div>

        </div>
       
        <!-- end hero-header -->
        }
