﻿@model FlexTemplate.ViewModels.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
<div id="kb" class="carousel kb_elastic kb_wrapper hero-kb_elastic" data-ride="carousel" data-interval="4000" data-pause="false">

    <div class="carousel-inner" role="listbox">

        <div class="item active img-bg" style="background-image:url('@Model.PhotoPath');">
        </div>

        <div class="item img-bg" style="background-image:url('@Model.PhotoPath');">
        </div>

        <div class="item img-bg" style="background-image:url('@Model.PhotoPath');">
        </div>

        <div class="kb_overlay"></div>

    </div>

    <div class="hero-kb_elastic-inner">

        <div class="container">

            <h1 tag="TitleFirstLabelCaption">@Model.Strings["TitleFirstLabelCaption"]</h1>
            <p tag="SubtitleLabelCaption">@Model.Strings["SubtitleLabelCaption"]</p>

            <div class="home-search-form mt-20-xs">

                <form>

                    <div class="form-group location-form">
                        <input type="text" class="form-control" placeholder="Where would you like to eat?">
                    </div>

                    <div class="form-group">
                        <select class="custom-select" id="category-type">
                            @for (int i = 0; i < Model.CategoriesNames.Count; i++)
                            {
                                <option value="@i">@Model.CategoriesNames[i]</option>
                            }
                        </select>

                    </div>

                    <div class="form-group">
                        <select class="custom-select" id="no-of-people">
                            <option value="0">Number Of People</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                        </select>
                    </div>

                    <button class="btn btn-primary btn-form" tag="FindButtonCaption">@Model.Strings["FindButtonCaption"]</button>

                </form>

                <div class="clear"></div>

                <p class="around-you" tag="EndLabelCaption"><a href="#">@Model.Strings["EndLabelCaption"]</a></p>

            </div>

        </div>

    </div>

</div>
<!-- end hero-header -->
}