﻿@model FlexTemplate.ViewModels.HomeController.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
<div class="hero alt-height search-margin-top" style="background-image:url('@Model.Images.First()'); margin-top:-25px;">
    <div class="container">
        <div contenteditable="true" name="ckeditor"><h1 tag="TitleFirstLabelCaption">@Model.Strings["TitleFirstLabelCaption"]</h1></div>
        <div contenteditable="true" name="ckeditor"><p tag="SubtitleLabelCaption">@Model.Strings["SubtitleLabelCaption"]</p></div>

        <div class="home-search-form">

            <form>

                <div class="form-group location-form">
                    <input type="text" class="form-control" placeholder="Where would you like to eat?">
                </div>

                <div class="form-group">
                    <select class="custom-select" id="category-type">
                        @for (int i = 0; i < Model.CategoriesNames.Count; i++)
                        {
                            <option value="@i">@Model.CategoriesNames[i]</option>
                        }
                    </select>
                </div>
                <button class="btn btn-primary btn-form" tag="FindButtonCaption">@Model.Strings["FindButtonCaption"]</button>
            </form>

            <div class="clear"></div>
            <div contenteditable="true" name="ckeditor">
            <p class="around-you" tag="EndLabelCaption">@Model.Strings["EndLabelCaption"]</p>
            </div>
        </div>

    </div>

</div>
<!-- end hero-header -->
<script type="text/javascript">CKEDITOR.inline('ckeditor',{toolbar: 'Full'});</script>
}