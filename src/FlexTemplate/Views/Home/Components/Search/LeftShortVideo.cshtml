﻿@model FlexTemplate.ViewModels.HomeController.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
<div class="hero-video-bg youtube-bg-wrapper search-margin-top" style="margin-top:-25px;">

    <div class="youtube-overlay"></div>

    <div class="top_box">
        <div id="player"></div>
    </div>

    <div class="hero-video-bg-inner">

        <div class="container">

            <h1 tag="TitleFirstLabelCaption" contenteditable="true">@Model.Strings["TitleFirstLabelCaption"]</h1>
            <p tag="SubtitleLabelCaption" contenteditable="true">@Model.Strings["SubtitleLabelCaption"]</p>

            <div class="home-search-form">

                <form>

                    <div class="form-group location-form">
                        <input type="text" class="form-control" placeholder="Where would you like to eat?">
                    </div>

                    <div class="form-group">
                        <select class="custom-select" id="category-type">
                            @for (int i = 0; i < Model.CategoriesNames.Count; i++)
                            {
                                <option value="@i">@Model.CategoriesNames[i]</option>
                            }
                        </select>

                    </div>

                    <button class="btn btn-primary btn-form" tag="FindButtonCaption">@Model.Strings["FindButtonCaption"]</button>

                </form>

                <div class="clear"></div>

                <p class="around-you" tag="EndLabelCaption" contenteditable="true"><a href="#">@Model.Strings["EndLabelCaption"]</a></p>

            </div>

        </div>

    </div>

</div>
<!-- end hero-header -->
}