﻿@model FlexTemplate.ViewModels.HomeController.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
<div class="hero text-center search-margin-top" style="background-image: url('../../@Model.Images.First()'); margin-top:-25px; z-index:1000;">
    <div class="container">

        <div class="row">

            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">

                @Html.Raw(Model.Strings["TitleFirstLabelCaption"])
                @Html.Raw(Model.Strings["SubtitleLabelCaption"])

                <div class="home-search-form home-search-form-center">

                    <form asp-action="Places">

                        <div class="form-group location-form">
                            <input name="input" type="text" class="form-control" placeholder="Where would you like to eat?">
                        </div>

                        <div class="form-group">
                            <select name="categories" class="custom-select" id="category-type">
                                <option selected="true" disabled="disabled">Всі</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <select name="cities" class="custom-select" id="city-type">
                                <option selected="true" disabled="disabled">Всі</option>
                                @foreach (var city in Model.Cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            </select>
                        </div>

                        @Html.Raw(Model.Strings["FindButtonCaption"])

                    </form>

                    <div class="clear"></div>

                    @Html.Raw(Model.Strings["EndLabelCaption"])

                </div>

            </div>

        </div>

    </div>

</div>
<!-- end hero-header -->
}