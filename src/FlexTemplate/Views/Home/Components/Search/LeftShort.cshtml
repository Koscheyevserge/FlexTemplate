﻿@model FlexTemplate.ViewModels.HomeController.SearchViewModel
@if (Model != null)
{
<!-- start hero-header -->
<div class="hero search-margin-top" style="background-image:url('@Model.Images.First()'); margin-top:-25px;">
    <div class="container">

        @Html.Raw(Model.Strings["TitleFirstLabelCaption"])
        @Html.Raw(Model.Strings["SubtitleLabelCaption"])

        <div class="home-search-form">

            <form>

                <div class="form-group location-form">
                    <input type="text" class="form-control" placeholder="Where would you like to eat?">
                </div>

                <div class="form-group">
                    <select class="custom-select" id="category-type">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <select class="custom-select" id="city-type">
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                </div>

                @Html.Raw(Model.Strings["FindButtonCaption"])

            </form>

            <div class="clear"></div>

            @Html.Raw(Model.Strings["EndLabelCaption"])

        </div>

    </div>

</div>
<!-- end hero-header -->
}