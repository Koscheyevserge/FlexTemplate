@model FlexTemplate.ViewModels.ThisCityPlacesViewModel
@if (Model != null)
{
    <section class="c-this-city-places bg-white">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="section-title-02">
                        <h3><span>Ресторани у твоєму місті</span></h3>
                        <p>Найкращі ресторани міста на будь-який смак</p>
                    </div>
                </div>
            </div>
            <div class="restaurant-grid-wrapper mb-30">
                <div class="GridLex-gap-30 GridLex-gap-20-mdd">
                    <div class="GridLex-grid-noGutter-equalHeight GridLex-grid-center">
                        @foreach (var vm in Model.ThisCityPlaceViewModels)
                        {
                            @await Component.InvokeAsync("ThisCityPlace", new {model = vm});
                        }
                    </div>
                    <div class="text-center">
                        <a href="#" class="btn btn-primary">Більше ресторанів</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
