@model FlexTemplate.ViewModels.HomeController.OtherCitiesPlacesViewModel
@if (Model != null)
{
<section class="c-other-cities-places">
  <div class="container">
    <div class="row">
      <span class="user-edit-icon"></span>
      <div class="col-md-8">
        <div class="section-title-02">
          <h3>@Html.Raw(Model.Strings["TitleLabelCaption"])</h3>
          @Html.Raw(Model.Strings["SubtitleLabelCaption"])
        </div>
      </div>
    </div>
    <div class="destination-grid-wrapper-02">
      <div class="GridLex-gap-30 GridLex-gap-20-mdd GridLex-gap-10-xs">
        <div class="GridLex-grid-noGutter-equalHeight GridLex-grid-center">
        @foreach (var cityId in Model.OtherCitiesPlacesIds)
        {
            @await Component.InvokeAsync("OtherCityPlaces", new {id = cityId});
        }
        </div>
      </div>
    </div>
  </div>
</section>
}