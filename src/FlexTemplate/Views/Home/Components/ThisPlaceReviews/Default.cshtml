        <div class="review-item-wrapper">
            
            <ul class="review-item-list">
                @foreach (PlaceReview review in Model.Place.Reviews)
                {
                    @await Component.InvokeAsync("ThisPlaceReview", new { item = review });
                }
            </ul>
            <h4>Додати комментар</h4>

            <form method="post" id="contactForm" asp-controller="Home" asp-action="NewPlaceReview" asp-route-placeid="@Model.Place.Id" class="comment-form">

                <div class="clear"></div>
                <div class="row">
                    <div class="col-md-12 mb-20">
                        <div class="form-group">
                            <label for="comment-message">Комментар</label>
                            <textarea name="text" id="comment-message" class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Відправити</button>
                    </div>
                </div>
            </form>
        </div>
